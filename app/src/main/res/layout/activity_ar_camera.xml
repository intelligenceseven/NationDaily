<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draw_clothes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sikeandroid.nationdaily.cosplay.ARCosplay"
    >
  <FrameLayout
      android:id="@+id/main_interface"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>
    <ImageView
        android:id="@+id/flash_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#fff"
        />
    <ImageButton
        android:id="@+id/flash"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_flash_off_black_24dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:background="#fff"

        />
    <ImageButton
        android:id="@+id/change_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rotation"
        />

    <RelativeLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="#c000"
        >
      <ImageView
          android:id="@+id/preview"
          android:layout_width="50.625dp"
          android:layout_height="90dp"
          android:layout_margin="10dp"
          android:background="#fff"
          android:scaleType="centerInside"
          />
      <ImageButton
          android:id="@+id/take_photo"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_centerInParent="true"
          android:background="@drawable/take_photo"
          />
    </RelativeLayout>

  </FrameLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:background="#fff"
      android:orientation="vertical"
      >
    <FrameLayout
        android:id="@+id/pref_set"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>
  </LinearLayout>
</android.support.v4.widget.DrawerLayout>