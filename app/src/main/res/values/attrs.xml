<resources>
    <declare-styleable name="scanview">
        <!-- 渐变圆view的宽度 -->
        <attr name="GradientCircleView_width" format="dimension" />
        <!-- 渐变圆view的高度 -->
        <attr name="GradientCircleView_hight" format="dimension" />
        <!-- 刻度圆view的宽度 -->
        <attr name="CalibrationView_width" format="dimension" />
        <!-- 刻度圆view的高度 -->
        <attr name="CalibrationView_hight" format="dimension" />
        <!-- 外圈圆view的宽度 -->
        <attr name="OutCircleView_width" format="dimension" />
        <!-- 外圈圆view的高度 -->
        <attr name="OutCircleView_hight" format="dimension" />
        <!-- 内圈上下扫描圆view的宽度 -->
        <attr name="InnerCircleView_width" format="dimension" />
        <!-- 内圈上下扫描圆view的高度 -->
        <attr name="InnerCircleView_hight" format="dimension" />
        <!-- 渐变圆view中心圆半径 -->
        <attr name="GradientCircleView_center_circle_radius_size" format="dimension" />
        <!-- 刻度圆view中心圆半径 -->
        <attr name="CalibrationView_radius_size" format="dimension" />
        <!--  外圈圆view中心圆半径 -->
        <attr name="OutCircleView_radius_size" format="dimension" />
        <!-- 内圈上下扫描圆view中心圆半径 -->
        <attr name="InnerCircleView_radius_size" format="dimension" />
    </declare-styleable>

</resources>